{
    "name": "dean151/aln-symfony",
    "description": "A pure PHP Symfony implementation to replace alnpet.com API",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-amqp": "*",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-pcntl": "*",
        "api-platform/core": "^2.6",
        "cboden/ratchet": "^0.4.4",
        "doctrine/annotations": "^1.0",
        "doctrine/doctrine-bundle": "^2.7",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^2.12",
        "nelmio/cors-bundle": "^2.2",
        "php-amqplib/php-amqplib": "^3.2",
        "phpdocumentor/reflection-docblock": "^5.3",
        "phpstan/phpdoc-parser": "^1.6",
        "symfony/amqp-messenger": "^6.1.0",
        "symfony/asset": "^6.1.0",
        "symfony/console": "^6.1.0",
        "symfony/dotenv": "^6.1.0",
        "symfony/expression-language": "^6.1.0",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "^6.1.0",
        "symfony/messenger": "^6.1.0",
        "symfony/property-access": "^6.1.0",
        "symfony/property-info": "^6.1.0",
        "symfony/proxy-manager-bridge": "^6.1.0",
        "symfony/runtime": "^6.1.0",
        "symfony/security-bundle": "^6.1.0",
        "symfony/serializer": "^6.1.0",
        "symfony/twig-bundle": "^6.1.0",
        "symfony/validator": "^6.1.0",
        "symfony/yaml": "^6.1.0",
        "thecodingmachine/safe": "^2.2"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^3.0.0-alpha",
        "dama/doctrine-test-bundle": "^7.1",
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "friendsofphp/php-cs-fixer": "^3.9",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-phpunit": "^1.1",
        "phpstan/phpstan-symfony": "^1.2",
        "phpunit/phpunit": "^9.5",
        "ratchet/pawl": "^0.4.1",
        "symfony/browser-kit": "^6.1.0",
        "symfony/css-selector": "^6.1.0",
        "symfony/debug-bundle": "^6.1.0",
        "symfony/http-client": "^6.1.0",
        "symfony/maker-bundle": "^1.44",
        "symfony/monolog-bundle": "^3.0",
        "symfony/phpunit-bridge": "^6.0",
        "symfony/stopwatch": "^6.1.0",
        "symfony/web-profiler-bundle": "^6.1.0",
        "thecodingmachine/phpstan-safe-rule": "^1.2",
        "zenstruck/foundry": "^1.21"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "cghooks add --ignore-lock",
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "cghooks update",
            "@auto-scripts"
        ],
        "sniff": [
            "php-cs-fixer fix --allow-risky=yes"
        ],
        "stan": [
            "phpstan analyse --memory-limit 1G"
        ],
        "lint": [
            "@sniff",
            "@stan"
        ],
        "unit": [
            "@pause",
            "symfony console -e test doctrine:database:create --no-interaction --if-not-exists",
            "symfony console -e test doctrine:migration:migrate --no-interaction --all-or-nothing --allow-no-migration",
            "symfony console -e test doctrine:fixtures:load --no-interaction",
            "symfony run -d symfony console -e test aln:socket:run",
            "symfony run -d symfony console -e test aln:feeder:simulate --fast ABC123456789",
            "symfony run -d symfony console -e test aln:feeder:simulate --not-responding --fast OBU293827463",
            "sleep 2",
            "bin/phpunit",
            "@pause"
        ],
        "test": [
            "@lint",
            "@unit"
        ],
        "boot": [
            "docker-compose up -d",
            "@start"
        ],
        "start": [
            "symfony server:start -d",
            "symfony run -d --watch=config,src symfony console aln:socket:run"
        ],
        "pause": [
            "symfony server:stop"
        ],
        "stop": [
            "@pause",
            "docker-compose stop"
        ]
    },
    "scripts-descriptions": {
        "sniff": "Run PHP Code Sniffer analysis on codebase",
        "stan": "Run PHPStan analysis on codebase",
        "unit": "Run PHPUnit tests on codebase",
        "test": "Run PHP Code Sniffer, PHPStan analysis & PHPUnit tests on codebase",
        "boot": "Start docker, then webserver and socket",
        "start": "Start webserver & socket server for development",
        "pause": "Stop webserver & socket server",
        "stop": "Stop Docker, webserver and socket"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer validate --strict",
                "composer lint"
            ],
            "post-merge": "composer update"
        },
        "symfony": {
            "allow-contrib": false,
            "require": "^6.1.0"
        }
    }
}
